<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<AnchorPane id="AnchorPane" prefHeight="200" prefWidth="320" xmlns:fx="http://javafx.com/fxml">
    <GridPane>
        <GridPane style="-fx-padding: 10px; -fx-hgap: 10px;" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Button
                    fx:id="openPortButton"
                    text="Open port"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="0"
                    style="-fx-padding: 10px 20px;"
            />
            <Button
                    fx:id="connectToPortButton"
                    text="Connect to port"
                    GridPane.columnIndex="1"
                    GridPane.rowIndex="0"
                    style="-fx-padding: 10px 20px;"
            />
            <Button
                    fx:id="sendMessageButton"
                    text="Send message"
                    GridPane.columnIndex="2"
                    GridPane.rowIndex="0"
                    style="-fx-padding: 10px 20px;"
            />
            <Button
                    fx:id="clearButton"
                    text="Clear"
                    GridPane.columnIndex="3"
                    GridPane.rowIndex="0"
                    style="-fx-padding: 10px 20px;"
            />
        </GridPane>
        <Pane fx:id="wrapperPane"  GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-padding: 10px" />
    </GridPane>
</AnchorPane>
